<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg11"
    tools:context=".AboutPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Làm thế nào để giành chiến thắng trong cuộc xổ số"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:shadowColor="#FF6D00"
            android:shadowRadius="5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abt"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            android:shadowColor="#FF6D00"
            android:shadowRadius="5"/>

        <TextView
            android:id="@+id/btnA"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/tabbar"
            android:text="QUAY LẠI TRANG CHỦ"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:shadowRadius="5"
            android:shadowColor="#FF0000"
            android:contentDescription="@string/button111"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>