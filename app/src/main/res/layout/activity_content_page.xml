<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg11"
    tools:context=".ContentPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lời khuyên về xổ số"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:shadowColor="#FF6D00"
            android:shadowRadius="5"/>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv1">

            <TextView
                android:id="@+id/btn11"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:text="Mẹo 1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:background="@drawable/tabbar02"
                android:shadowRadius="5"
                android:shadowColor="#FD0000"
                android:backgroundTint="#EFD5B3"/>

            <TextView
                android:id="@+id/btn22"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:text="Mẹo 2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:background="@drawable/tabbar02"
                android:shadowRadius="5"
                android:shadowColor="#FD0000"
                android:backgroundTint="#EFD5B3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_below="@id/l1">

            <TextView
                android:id="@+id/btn33"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:text="Mẹo 3"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:background="@drawable/tabbar02"
                android:shadowRadius="5"
                android:shadowColor="#FD0000"
                android:backgroundTint="#EFD5B3"/>

            <TextView
                android:id="@+id/btn44"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:text="Mẹo 4"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:background="@drawable/tabbar02"
                android:shadowRadius="5"
                android:shadowColor="#FD0000"
                android:backgroundTint="#EFD5B3"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/l2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="6 bước đơn giản để thắng xổ số"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:shadowColor="#FF6D00"
                    android:shadowRadius="5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/customborder3"
            android:backgroundTint="#D50000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499"
            android:layout_below="@id/tv2"/>

                <TextView
                    android:id="@+id/btnB"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/recyclerItems"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/tabbar"
                    android:contentDescription="@string/button11"
                    android:gravity="center"
                    android:shadowColor="#FB0000"
                    android:shadowRadius="5"
                    android:text="TIẾP THEO"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>